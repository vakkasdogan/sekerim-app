                </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

            </RelativeLayout>

            <!-- 6 -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/siringalar_6"
