<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/siringalar_page"
    tools:ignore="MissingDefaultResource"
    android:background="@drawable/insulin_uyg_background">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <!-- bolge bir -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/siringalar_ilk"
            android:padding="10dp"
            android:layout_marginTop="20dp">


            <!-- 1 -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/siringalar_1">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:id="@+id/siringalar_bir"
                    android:onClick="show1"
                    app:srcCompat="@drawable/siringalar_1"
                    android:layout_centerHorizontal="true"/>

                <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                    android:id="@+id/mycontent1"
                    android:layout_below="@id/siringalar_bir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:ael_expanded="false"
                    app:ael_duration="500"
                    app:ael_interpolator="accelerate"
                    app:ael_orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/siringalar_bir_aciklama"
                        app:srcCompat="@drawable/siringalar1_aciklama"
                        android:layout_centerHorizontal="true"/>

                </com.github.aakira.expandablelayout.ExpandableRelativeLayout>


            </RelativeLayout>

            <!-- 2 -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/siringalar_2"
                android:layout_below="@id/siringalar_1">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:id="@+id/siringalar_iki"
                    android:onClick="show2"
                    app:srcCompat="@drawable/siringalar_2"
                    android:layout_centerHorizontal="true"/>

                <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                    android:id="@+id/mycontent2"
                    android:layout_below="@id/siringalar_iki"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:ael_expanded="false"
                    app:ael_duration="500"
                    app:ael_interpolator="accelerate"
                    app:ael_orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/siringalar_iki_aciklama"
                        app:srcCompat="@drawable/siringalar2_aciklama"
                        android:layout_centerHorizontal="true"/>

                </com.github.aakira.expandablelayout.ExpandableRelativeLayout>


            </RelativeLayout>

            <!-- 3 -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/siringalar_3"
                android:layout_below="@id/siringalar_2">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:id="@+id/siringalar_uc"
