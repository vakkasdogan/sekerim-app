            <!-- 8 -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/siringalar_8"
                android:layout_below="@id/siringalar_7">
                <ImageView
                    android:layout_width="wrap_content"
